<style lang="scss">
  .header {
    padding: 45px 0 73px 0;
    background-color: #F9F6F5;
    &__content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    &__logo {
    }

    &__icons {
      display: flex;
      gap: 24px;
    }

    &__icons-item {
    }

    &__item-img {
    }
  }

  .menu {
    &__list {
      display: flex;
      gap: 40px;
    }

    &__item {
    }

    &__link {
      color: #222;
    }
  }

  .header-menu {
    &__list {
      display: flex;
      gap: 40px;
      overflow: hidden;
    }

    &__item {
      position: relative;
      z-index: 5;
    }

    &__link {
      color: #222;

      &::before {
        transform: scaleX(0);
        transform-origin: bottom right;
      }

      &:hover::before {
        transform: scaleX(1);
        transform-origin: bottom left;
      }

      &::before {
        content: " ";
        display: block;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        inset: 0 0 0 0;
        background: #F4DCD3;
        z-index: -1;
        transition: transform 0.3s ease;
      }
    }
  }

  .burger-menu {
    width: 24px;
    height: 24px;
    position: relative;
    z-index: 999;
    overflow: hidden;
    cursor: pointer;

    &__item {
      height: 2px;
      width: 20px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #000;
      transition: all 0.5s;

      &:nth-of-type(2) {
        top: calc(50% - 5px);
      }

      &:nth-of-type(3) {
        top: calc(50% + 5px);
      }
    }
  }

  .burger-menu--open .burger-menu__item:nth-of-type(1) {
    width: 0;
  }

  .burger-menu--open .burger-menu__item:nth-of-type(2) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(45deg);
    left: 50%;
  }

  .burger-menu--open .burger-menu__item:nth-of-type(3) {
    top: 50%;
    transform: translate(-50%, 0%) rotate(-45deg);
    left: 50%;
  }

  .menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 15px;
    background: #f9f6f5;
    transform: translateX(-100%);
    transition: transform 0.5s;
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    z-index: 500;

    &__list-link {
      color: #222;
    }

    &__list {
      font-size: 35px;
      line-height: 1.2;
      font-weight: 500;
      color: #000;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
  }

  .menu--open {
    transform: translateX(0);

    .menu__cart {
      display: block;
    }

    .menu__link {
      color: #000;
      font-size: 32px;
    }
  }

  @media (max-width: 820px) {
    .header-menu {
      display: none;
    }

    .header {
      padding: 30px 0 ;
    }
  }
</style>
